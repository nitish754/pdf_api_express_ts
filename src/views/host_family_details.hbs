<!DOCTYPE html>
<html>

<head>
    <title>Html2Pdf</title>
    <style type="text/css" media="all">
        @import url("https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap");

        *,
        *::before,
        *::after {
            box-sizing: border-box;
            vertical-align: middle;
            font-family: 'Roboto', sans-serif;
        }

        html,
        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            color: #000000;
            font-size: 14px;
            height: 100%;
            font-weight: 400;
        }


        table {
            width: 100%;
            caption-side: bottom;
            border-collapse: collapse;
        }

        table th {
            font-weight: 700;
        }

        table th span {
            font-weight: normal;
        }

        .text-start {
            text-align: left !important;
        }

        .text-center {
            text-align: center !important;
        }

        .text-end {
            text-align: right !important;
        }

        .text-white {
            color: #fff !important;
        }

        .bg-red {
            background-color: #b93337 !important;
        }

        .bg-blue {
            background-color: #325fa0 !important;
        }

        .t-head {
            height: 40px;
            padding: 8px;
            border-right: 2px solid #fff;
        }

        .t-head2 {
            height: 40px;
            padding: 8px;
            border-right: 2px solid #fff;
        }

        .t-head:last-child,
        .t-head2:last-child {
            border-right: 0px;
        }

        .t-cell {
            background-color: #f0f0f0;
            padding: 8px;
            border-bottom: 2px solid #cccccc;
        }

        .last-cell .t-cell {
            border-bottom: none;
        }

        .heading {
            background-color: #f2f6f8 !important;
            height: 30px;
        }

        .td-blank {
            height: 30px;
        }

        .flex {
            display: flex;
            align-items: center;
            gap: 10px;
            justify-content: end;
            margin-bottom: 4px;
        }

        .flex .icon {
            border-radius: 8px;
            width: 36px;
            height: 36px;
            flex: 0 0 36px;
            background-color: #b93337 !important;
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
        }



        .info-table {
            margin-top: 120px;
            margin-bottom: 40px;
        }

        .info-table .flex {
            max-width: 300px;
            margin-left: auto;
        }

        .header {
            background-image: url(image/header.jpg);
            background-repeat: no-repeat;
            background-position: top;
            background-size: cover;
            width: 100%;
            position: absolute;
            z-index: -1;
            height: 400px;
            left: 0;
            top: 0;
        }


        .qr-code {
            margin-top: 20px;
            margin-bottom: -1px;
            text-align: right;
        }

        .img {
            width: 200px;
        }

        footer {
            background-image: url(image/footer.jpg);
            height: 30px;
            background-position: bottom;
            background-size: 100%;
            background-repeat: no-repeat;
            bottom: 0;
            width: 100%;
        }

        @media print {
            .info-table {
                margin-top: 60px;
                margin-bottom: 30px;
            }

            .qr-code {
                margin-bottom: -12px;
            }

        }
    </style>
</head>

<body>
    <!--  -->
    <div class="header"></div>

    <!-- page content start -->
    <div id="page-content" style="width: 90%; margin: auto">
        <table class="info-table">
            <tr>
                <td rowspan="4" style="width: 50%;">
                    <img src="{{ headerInfo.logo }}" alt="logo" style="max-width:200px;">
                </td>
                <td class="text-end">
                    <div class="flex">
                        <span>{{ headerInfo.contact }}</span>
                        <span class="icon">
